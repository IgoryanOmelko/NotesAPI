<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHeaderMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtMenu"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLoginMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvLogin" />

        <TextView
            android:id="@+id/tvLoginTextMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSTMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtToken" />

        <TextView
            android:id="@+id/tvSTTextMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNotes"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/btnNotes"
        android:onClick="onBtnNotesClick"/>

    <Button
        android:id="@+id/TagsMenu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/btnTags"
        android:onClick="onBtnTagsClick"/>

    <Button
        android:id="@+id/Logout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/btnLogOut"
        android:onClick="onBtnLogoutClick"/>
</LinearLayout>